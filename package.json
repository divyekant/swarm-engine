{
  "name": "@swarmengine/core",
  "version": "0.1.0",
  "description": "Multi-agent DAG orchestration engine with actor-style agents, cost tracking, and pluggable adapters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "multi-agent",
    "dag",
    "orchestration",
    "llm",
    "ai-agents",
    "swarm",
    "typescript",
    "anthropic",
    "openai",
    "streaming"
  ],
  "author": "Divyekant Sushilkumar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divyekant/swarm-engine.git"
  },
  "bugs": {
    "url": "https://github.com/divyekant/swarm-engine/issues"
  },
  "homepage": "https://github.com/divyekant/swarm-engine#readme",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "openai": "^6.22.0"
  }
}
